}
/* 版本 */
.versions{
  width: 100vw;
  height: 90rpx;
  line-height: 90rpx;
  font-family: "微软雅黑";
  font-size: 30rpx;
  color: #061010;
  background-color: #fff;
}
.versions text:nth-child(1){
  padding-left: 20rpx;
  float: left;
}
.versions text:nth-child(2){
  padding-left: 20rpx;
  float: right;
  font-size: 28rpx;
  color: #999;
  margin-right: 20rpx;
}