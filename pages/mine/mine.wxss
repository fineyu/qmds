.header{
  width: 100vw;
  height: 30vh;
  background-color: #57c340;  
  overflow: hidden;
  position: relative;
}
.header .set{
  width:55rpx;
  height:55rpx;
  position:absolute;
  right:15rpx;
  top:15rpx;
}
.header_image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin: auto;
  background-color: #fff;
  margin-top: 5vh;
  border: 2rpx solid #fff;
}
.header_image image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.header_name{
  text-align: center;
  color: #fff;
  margin-top: 30rpx;
  font-family: "微软雅黑";
  font-size: 36rpx;
}
.header_sign{
  text-align: center;
  color: #fff;
  margin-top: 6rpx;
  font-family: "微软雅黑";
  font-size: 28rpx;
}
.mine_con view{
  width: 98vw;
  height: 110rpx;
  line-height: 110rpx;
  padding-left: 2vw;
  font-size: 28rpx;
  font-family: "微软雅黑";
  color: #061010;
  border-bottom: 1rpx solid #ddd;
}
/* .mine_con view:nth-child(odd){
  border-bottom: 1rpx solid #eee;
} */
.mine_con view text{
  display: block;
  float: left;
  width: 20vw;
  height: 110rpx;
  line-height: 110rpx;
}
.mine_con view image{
  width: 40rpx;
  height: 46rpx;
  margin-top:30rpx;
  margin-right:10rpx;
  float: left;
}
.right{
  float: right!important;
}
/* 导航 */
.nav{
  width: 100%;
  height: 155rpx;
}
.nav .nav_logo{
  width: 20%;
  height: 100rpx;
  text-align: center;
  float: left;
  margin-top: 38rpx;
  position: relative;
}

.nav text{
  font-family: "微软雅黑";
  font-size: 26rpx;
  color: #666;
}
.nav_logo image{
  width:52rpx;
  height:52rpx;
  display:block;
  margin-left:6.5vw;
}
/* 我的订单 */
.order {
  width: 98vw;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 2rpx solid #eee;
  padding-left: 2vw;
  font-size:30rpx;
  font-family: "微软雅黑";
  color: #061010;
}

.order text:nth-child(2){
  display: block;
  float: left;
  width: 20vw;
  height: 90rpx;
  line-height: 90rpx;
}
.order text:nth-child(4){
  display: block;
  float: right;
  height: 90rpx;
  line-height: 90rpx;
  color:#999;
  font-size: 28rpx;
}
.order image{
  width: 40rpx;
  height: 46rpx;
  margin-top:22rpx;
  margin-right:10rpx;
  float: left;
}
.right{
  float: right!important;
}
.number{
  width: 35rpx;
  height: 35rpx;
  background-color: #f85a2b;
  border-radius: 50%;
  position: absolute;
  color: #fff;
  font-size:20rpx;
  line-height:35rpx;
  text-align:center;
  top:-20rpx;
  left:80rpx;
}
.none{
  display: none;
}


.kefu image{
  width: 60rpx;
  height: 60rpx;
}
.kefu {
  text-align: center;
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 112rpx;
  line-height: 25rpx;
  font-family: "微软雅黑";
  font-size: 24rpx;
  color:#57c340;
  margin: 0;
  padding: 0;
  border: 1px solid transparent;  
  outline: none;   
  background-color: #fff;
  background: none;
}
.kefu::after{
  border: 0;
  
}