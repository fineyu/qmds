page{
  background-color: #fff;
}
.header{
  width:120rpx;
  height:120rpx;
  margin:18rpx auto;
}
.changeInfo{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 90vw;
  margin: 50rpx auto;
}
.changeInfoName{
  position: relative;
  height: 80rpx;
  width: 100%;
  border-radius: 10rpx;
  background: #fff;
  margin-bottom: 20rpx;
  padding-left: 67rpx;
  box-sizing: border-box;
  border:2rpx solid #c1c1c1;
}
.changeInfoName input{
  width: 100%;
  height:100%;
  color:#666 !important;
  font-size:30rpx;
  font-family: "微软雅黑";
  position: relative;
}
.changeBtn{
  width:90%;
  height:90rpx;
  background:#fff;
  border-radius:50rpx;
  margin-left:-20%;
  line-height:90rpx;
  background-color:#57c340;
  color:#fff;
  border:2rpx solid #eee;
  text-align: center;
  margin:auto;
  margin-top: 170rpx;
}
.register{
  color: #02020a;
  font-family: "微软雅黑";
  font-size: 24rpx;
  margin-top: 75rpx;
  text-align: center;
  width: 100%;
  height: 50rpx;
}
.register view{
  color: #999 !important;
  display: inline;
}
.forget_pwd{
  position:relative;
  font-family:"微软雅黑";
  font-size:24rpx;
  width:90vw;
  text-align:right;
  color:#999;
}
.phone{
  width:30rpx;
  height:30rpx;
  position:absolute;
  left:19rpx;
  top:25rpx;
}
.green{
  background-color: #57c340 !important;
  opacity: 0.9;
  color:#fff !important;
}
.weixin_login image{
  width: 45rpx;
  height: 45rpx;
  margin-top: 15rpx;
}
.weixin_login .bottom{
  color: #999;
  font-family: "微软雅黑";
  font-size: 28rpx;
  margin-top: 75rpx;
  text-align: center;
  margin: 0;
  padding: 0;
  border: 0 !important;  
  outline: none;  
  background-color: #fff;
}
.weixin_login button::after{
border: none;
}
