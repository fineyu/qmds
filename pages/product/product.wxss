page{
  background-color: #f8f8f8;
}
.nav{
  width: 98vw;
  height: 90rpx;
  margin: auto;
  background-color: #fff;
}
.nav .sort{
  width: 49.5%;
  height: 90rpx;
  line-height: 90rpx;
  float: left;
  border-right:2rpx solid #eee;
  text-align: center;
  font-family: "微软雅黑";
  font-size:  28rpx;
  color: #061010;
}
.nav .sort image{
  width:35rpx;
  height:35rpx;
  position:relative;
  top:10rpx;
}
.nav .precedence{
  width: 49.5%;
  height: 90rpx;
  line-height: 90rpx;
  float: left;
  text-align: center;
  font-family: "微软雅黑";
  font-size:  28rpx;
  color: #061010;
}
.green{
  color: #57c340 !important;
}
.gray{
  color: #061010 !important;
}
.header{
  width: 100vw;
  height: 80rpx;
  background-color: #57c340;
  overflow: hidden;
}
.header input{
  width: 90vw;
  height: 60rpx;
  line-height: 60rpx;
  margin: auto;
  background-color: #fff;
  border-radius: 50rpx;
  color: #999;
  font-size: 28rpx;
  text-align: center;
  margin-top: 10rpx;
}
/* 弹出框 */
.pop{
  position:fixed;
  top:174rpx;
  z-index:1001;
}
.list{
  width:96vw;
  height:70rpx;
  background-color:#fff;
  border-bottom:2rpx solid #eee;
  font-family:"微软雅黑";
  font-size:25rpx;
  color:#061010;
  line-height:70rpx;
  padding-left:4vw;
}
/* 内容 */
.products{
  width: 100vw;
  height: 94vh;
  background-color: #f8f8f8;
}
.pro_list{
  width: 48vw;
  float: left;
  height: 540rpx;
  background-color: #fff;
  /* text-align: center; */
  margin: 7rpx 1vw;
  position: relative;
}
.pro_list image{
  width: 46vw;
  height: 340rpx;
}
.pro_list text{
  width: 46vw;
  /* height: 74rpx; */
  font-family: "微软雅黑";
  font-size: 30rpx;
  color: #061010; 
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; 
  padding:0.8vw 1vw;
}
.pro_list view:nth-child(3){
  width: 44vw;
  font-family: "微软雅黑";
  font-size:24rpx;
  color: #999; 
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
  position: absolute;
  bottom: 55rpx;
  padding-left: 1vw;
}
.pro_list .price{
  font-family: "微软雅黑";
  font-size: 32rpx;
  color: #fc5a2a;
  float: left;
}
.none{
  display: none,
}
.original_price{
  font-family: "微软雅黑";
  font-size:32rpx;
  color: #999;
  text-decoration:line-through;
  float: left;
  margin-left:10rpx;
}
.price_bottom{
  position: absolute;
  bottom: 6rpx;
}

.no_pro{
  font-family:'微软雅黑';
  font-size:32rpx;
  color:#061010;
  width:100%;
  text-align:center;
  position:relative;
  top:226rpx;
}
.no_pro image{
  width:23vw;
  height:23vw;
  display:block;
  margin:auto;
}