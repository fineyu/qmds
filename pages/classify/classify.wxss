
.header{
  width: 100vw;
  height: 80rpx;
  background-color: #57c340;
  overflow: hidden;
}
.header input{
  width: 90vw;
  height:60rpx;
  line-height: 60rpx;
  margin: auto;
  background-color: #fff;
  border-radius: 50rpx;
  color: #999;
  font-size: 28rpx;
  text-align: center;
  margin-top: 10rpx;
}
.left{
  width: 25vw;
  height:1011rpx;
  float: left;
  background-color: #f8f8f8;
}
.left_logo{
  width: 50rpx;
  height: 60rpx;
  display: block;
  margin: auto;
  margin-top: 1vh;
}
.left view{
  width: 100%;
  height: 112rpx;
  text-align: center;
  color: #999;
  font-family: "微软雅黑"; 
  font-size:28rpx;
  float: left;
}
.right{
  width: 75vw;
  height:1011rpx;
  overflow: hidden;
}
#food{
  width: 75vw;
  height:94vh;
  float: right;
}
.white{
  background-color: #fff!important;
  color:#57c340!important;
  border-left: 6rpx solid #57c340;
}
.right_list{
  width: 20vw;
  height: 160rpx;
  float: left;
  margin:20rpx 2.5vw 0 2.5vw;
  overflow: hidden;
  text-align: center;
}

.right_list image{
  width: 90rpx;
  height: 90rpx;
  float: left;
  margin-left: 3.5vw;
}
.right_list view{
  display: block;
  height: 60rpx;
  width: 20vw;
  line-height: 60rpx;
  text-align: center;
  margin-top: 0;
  font-family: "微软雅黑";
  font-size:24rpx;
  float: left;
  color: #666;
}
.none{
  display: none !important;
}
.lists{
  display: inline-block;
  padding-top: 30rpx;
}
.sousuo{
  text-align: center;
  width: 90vw;
  height:60rpx;
  line-height: 60rpx;
  margin: auto;
  background-color: #fff;
  border-radius: 50rpx;
  color: #999;
  font-size: 28rpx;
  margin-top: 10rpx;
}


.kefu image{
  width: 60rpx;
  height: 60rpx;
}
.kefu {
  text-align: center;
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 112rpx;
  line-height: 25rpx;
  font-family: "微软雅黑";
  font-size: 24rpx;
  color:#57c340;
  margin: 0;
  padding: 0;
  border: 1px solid transparent;  
  outline: none;   
  background-color: #fff;
  background: none;
}
.kefu::after{
  border: 0;
  
}