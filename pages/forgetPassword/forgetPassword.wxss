  margin:18rpx auto;
}
.changeInfo{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 90%;
  margin: 50rpx auto;
}
.changeInfoName{
  position: relative;
  height: 80rpx;
  width: 100%;
  border-radius: 10rpx;
  background: #fff;
  margin-bottom: 20rpx;
  padding-left: 67rpx;
  box-sizing: border-box;
  border: 2rpx solid #c1c1c1;
}
.codeBtn{
  position:absolute;
  right:0;
  top:0;
  color:#fff;
  width:30%;
  font-size:26rpx;
  height:77rpx;
  line-height:80rpx;
  background-color:#57c340;
}
.changeInfoName input{
  width: 100%;
  height:100%;
  color:#666 !important;
  font-size:30rpx;
  font-family: "微软雅黑";
}
.changeBtn{
