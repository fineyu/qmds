.banner image{
  width: 100vw;
  height: 2600rpx;
}
.forms input{
  width: 88vw;
  height: 80rpx;
  border-radius: 10rpx;
  border: 2rpx solid #999;
  margin: 10rpx auto;
  padding:0 1vw;
  font-family: "微软雅黑";
  font-size: 36rpx;
}
.forms button{
    width: 40vw;
    height: 100rpx;
    background-color: #57c340;
    box-shadow: 2rpx 2rpx 10rpx #57c340;
    text-align: center;
    color: #fff;
    line-height: 100rpx;
    border-radius: 40rpx;
    margin: 40rpx auto;
}
.tip{
  width: 100vw;
  text-align: center;
  margin-top: 40rpx;
  font-family: "微软雅黑";
  font-size: 32rpx;
  color: #999;
}
.phone{
  width: 100vw;
  text-align: center;
  font-family: "微软雅黑";
  font-size: 36rpx;
  color: #57c340;
  text-decoration: underline;
  margin: 10rpx 0;
}