
.container {
  padding: 0;
}

/* 轮播图 */

swiper {
  width: 750rpx;
  height: 400rpx;
  margin: 0 auto;
}

swiper .slide-image {
  width: 100%;
  height: 100%;
}

/* 导航 */

.nav_con {
  width: 100vw;
  height: 360rpx;
  margin-top: 20rpx;
}

.nav {
  width: 150rpx;
  height: 180rpx;
  text-align: center;
  float: left;
}

.nav text {
  font-family: "微软雅黑";
  font-size: 26rpx;
  color: #666;
  width: 150rpx;
  height: 50rpx;
  display: block;
  float: left;
  text-align: center;
  line-height: 50rpx;
}

.nav_logo image {
  width: 85rpx;
  height:85rpx;
}

.advertisting image {
  width: 100vw;
  height: 240rpx;
  margin-top: -10rpx;
  margin-bottom: 10rpx;
}

/* 商品 */

.products {
  width: 100vw;
  background-color: #f8f8f8;
}

.pro_list {
  width: 48vw;
  float: left;
  height: 540rpx;
  background-color: #fff;
  /* text-align: center; */
  margin: 10rpx 1vw;
  position: relative;
}

.pro_list image {
  width: 46vw;
  height: 340rpx;
}

.pro_list text:nth-child(2) {
  width: 46vw;
  /* height: 70rpx;  */
  font-family: "微软雅黑";
  font-size: 30rpx;
  color: #061010;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  padding:0.8vw 1vw;
}

.pro_list view:nth-child(3) {
  width: 44vw;
  font-family: "微软雅黑";
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  position: absolute;
  bottom: 55rpx;
  padding-left: 1vw;
}

.pro_list .price {
  font-family: "微软雅黑";
  font-size: 32rpx;
  color: #fc5a2a;
  float: left;
}

.footer {
  width: 100vw;
  height: 80rpx;
  line-height: 80rpx;
  font-family: "微软雅黑";
  font-size: 28rpx;
  color: #999;
  text-align: center;
  background-color: #f8f8f8;
}

.original_price {
  font-family: "微软雅黑";
  font-size: 32rpx;
  color: #999;
  text-decoration: line-through;
  float: left;
  margin-left: 10rpx;
}

.price_bottom {
  position: absolute;
  bottom: 6rpx;
}

/* 推荐标题 */
.rec_title{
  width: 85%;
  height: 40rpx !important;
}
.rec_title  image{
  width: 100%;
