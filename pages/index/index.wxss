.swiperClass {
  margin: 0;
  height: 590rpx;
  background-color: #f9f9f9;
}
 .swiperClass swiper-item{
   background-color: #fff;
 }
.slide-img {
  width: 100%; 
  height: 400rpx;
  border-radius: 4rpx;
  border: 1rpx #999 solid;
  position: relative;
}
image.active {
  transform: none;  
  transition: all 0.2s ease-in 0s;
} 
 

 
image.quiet {
  
  transform: scale(0.8333333);
  transition: all 0.2s ease-in 0s;
}

